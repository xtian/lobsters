<% if @cur_url == "/recent" %>
  <div class="box" id="leader">
    <em>The <a href="/newest">newest</a> stories that have not yet reached the front page.</em>
  </div>
<% end %>
<% if @tag %>
  <div class="box" id="leader">
    Stories <a href="/tags">tagged</a> as
    <a href="<%= tag_path(@tag) %>"
      class="<%= @tag.css_class %>"
      title="<%= @tag.description %>"><%= @tag.tag %></a>
    &ndash;
    <%= @tag.description %>
  </div>
<% end %>

<ol class="stories list <%= @cur_url == "/hidden" ? "show_hidden" : "" %>">
  <%= render partial: "stories/listdetail", collection: @stories,
    as: :story %>
</ol>

<div class="morelink">
  <% if @page && @page > 1 %>
    <a href="<%= @cur_url %><%= @cur_url == "/" ? "" : "/" %><%=
      @page == 2 ? "" : "page/#{@page - 1}" %>" rel="prev">&lt;&lt; Page
      <%= @page - 1 %></a>
  <% end %>

  <% if @show_more %>
    <% if @page && @page > 1 %>
      |
    <% end %>
    <a href="<%= @cur_url %><%= @cur_url == "/" ? "" : "/" %>page/<%=
      @page + 1 %>" rel="next">Page <%= @page + 1 %> &gt;&gt;</a>
  <% end %>
</div>
